<Window x:Class="CommunalMoneyManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunalMoneyManager"
        mc:Ignorable="d"
		ResizeMode="NoResize"
        Title="CommunalMoneyManager (CMM)" Height="450" Width="650" Background="#FFBEED5E">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Margin="0 0 0 10">
			<TextBlock Text="Név:" VerticalAlignment="Center" Margin="0 0 10 0"/>
			<TextBox x:Name="NameTextBox" Width="200" Margin="0 0 10 0"/>
			<TextBlock Text="Összeg (Ft):" VerticalAlignment="Center" Margin="0 0 10 0"/>
			<TextBox x:Name="AmountTextBox" Width="100" Margin="0 0 10 0"/>
			<Button Content="Hozzáadás" Width="100" Click="AddButton_Click" Background="#FF43D01C" Foreground="White" FontWeight="Bold"/>
		</StackPanel>

		<ListBox x:Name="StudentListBox" Grid.Row="1" Height="200" Margin="0 0 0 10" Background="{x:Null}" Foreground="Black" BorderBrush="White"/>

		<TextBlock x:Name="TotalTextBlock" Grid.Row="2" FontSize="16" FontWeight="Bold" Margin="0 0 0 10" Foreground="#FF0010FF">
			<TextBlock.Background>
				<ImageBrush ImageSource="/shroom.png"/>
			</TextBlock.Background>
        Összesen: 0 Ft
		</TextBlock>

		<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left">
			<Button Content="CE" Width="80" Click="ClearFields_Click" Background="Red" Foreground="White" FontWeight="Bold"/>
			<Button Content="C" Width="80" Click="ClearAll_Click" Background="Red" Foreground="White" FontWeight="Bold"/>
			<Button Content="Kijelölt törlése" Width="150" Click="DeleteSelected_Click" Background="Red" Foreground="White" FontWeight="Bold"/>
		</StackPanel>
		
		
	</Grid>
</Window>
